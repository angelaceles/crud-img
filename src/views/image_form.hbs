<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/images/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="title" 
                        class="form-control" placeholder="Image Title">
                    </div>
                    <br>
                    <div class="form-group">
                        <textarea name="description" 
                        class="form-control" 
                        placeholder="Image Description"></textarea>
                    </div>
                    <br>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <label class="input-group-text" for="inputGroupFile01">
                                Choose File
                            </label>
                            <input type="file" name="image" class="form-control" id="inputGroupFile01">       
                        </div>
                    </div>  
                    <button class="btn btn-primary">Sube tu Foto</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8 ms-auto">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-md-1"></th>
                    <th class="col-md-2">Title</th>
                    <th class="col-md-3">Description</th>
                    <th class="col-md-4">Operations</th>
                </tr>
            </thead>
            <tbody>
                {{#each photos}}
                <tr>
                    <td></td>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>
                        <a href="{{imageURL}}" target="_blank" class="btn btn-primary">View</a>
                        <a href="/images/delete/{{_id}}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>